<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body1" />

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/skin1" />

    <ImageView
        android:id="@+id/image_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyes1" />

    <ImageView
        android:id="@+id/image_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nose1" />

    <ImageView
        android:id="@+id/image_mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mouth1" />

    <ImageView
        android:id="@+id/image_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hat1" />

</FrameLayout>